<h1 align="center">Log in</h1>


<%= form_for( :session , :html =>{class: "form-horizontal", role: "form"}, url: login_path )do  |f|%>

    <div class="form-group">
      <div class="controll-label col-sm-2">
        <%= f.label :email%>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control" , placeholder: "add email", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="controll-label col-sm-2">
        <%= f.label :password%>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control" , autofocus: true , autocomplete: "off"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 clo-sm-10">
        <%= f.submit "Login", class: "btn btn-primary btn-lg"%>
      </div>
    </div>

<% end %>
