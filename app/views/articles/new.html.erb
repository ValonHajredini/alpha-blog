    <h2>The following erros prevented the articles from geting created</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg|%>
        <li><%= msg%></p></li>

    <%end%>
    </ul>
<%end%>

<%= form_for @article do |f|%>
  <p>
    <%= f.label :title%>
  </p>
    <p>
      <%= f.text_field :title%>
    </p>
    <p>
      <%= f.label :description%>
    </p>
